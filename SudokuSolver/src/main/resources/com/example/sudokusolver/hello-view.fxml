<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>


<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="4.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sudokusolver.HelloController">
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
    </padding>



    <Label fx:id="welcomeText"/>
    <Label text="ENTER THE NUMBER" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane fx:id="gridPane" hgap="10" vgap="5" style="-fx-alignment: center;">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10"/>
        </padding>
    </GridPane>
    <HBox spacing="10" alignment="BOTTOM_CENTER">
        <Button text="Solve" onAction="#onSolveButtonClick"/>
        <Button text="Clear" onAction="#onClearButtonClick"/>
    </HBox>
</VBox>